
<div class="login-marges background-grey">
  <div align="center">
  <h1 align="center">Les entreprises avec qui nous travaillons :</h1>
  </br>
  </br>
  <%= link_to "Ajouter un partenaire / une start-up", '/new', method: :get, class: "btn btn-xs btn-primary" %>
  <% @partners.each do |partner| %>
    <ul class="listing">
     <div class="well col-md-4 col-md-offset-4 login-marges-2">
       <% if partner.company_logo.attached? %>
       <li class="article-title"><%= image_tag partner.company_logo, class: "img-fluid" %></li>
       <% end %>
        <li class="article-title"><strong><%= partner.company_name %></strong></li>
        <li class="article-title"><em>Statut du projet / Type de partenariat</em> : <%= partner.status %></li>
        <li class="article-title"><em>Grand groupe (sinon start-up)</em> : <%= partner.grand_groupe %></li>
        <% if logged_in? %>
        <div class="article-actions">
         <%= link_to "Modifier", edit_partner_path(partner), class: "btn btn-xs btn-primary" %>
         <%= link_to "Supprimer ce membre", delete_partner_path(partner), method: :get, data: { confirm: "Voulez-vous vraiment supprimer ce partneraire ?"}, class: "btn btn-xs btn-danger" %>
        </div>
        <% end %>
        </div>
      </ul>
  <% end %>
  </div>
</div>
