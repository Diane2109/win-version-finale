

<div class="row form-center">
 <div class="col">
  <%= form_for(@partner, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Nom de l'entreprise</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :company_name, class: "form-control", placeholder: "Nom de l'entreprise", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Statut</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :status, class: "form-control", placeholder: "Statut", autofocus: true %>
   </div>
  </div>

  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Cocher si c'est un partenaire / grand groupe tech :</p>
   </div>
   <div class="col-sm-6">
    <%= f.check_box :grand_groupe, class: "form-control", placeholder: "Grand groupe ou start-up" %>
   </div>
  </div>

  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Logo de l'entreprise</p>
   </div>
   <div class="col-sm-6">
    <%= f.file_field :company_logo, class: "form-control" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <%= f.submit "Sauvegarder l'entreprise", class: 'btn btn-primary btn-lg' %>
   </div>
  </div>
<% end %>
<%= link_to 'Back', partners_path, class:"btn btn-xs btn-danger" %>
 </div>
</div>
