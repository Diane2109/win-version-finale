<div class="login-marges background-grey">
  <div align="center">
  <h1 align="center">Toutes les personnes qui travaillent chez Winnovation :</h1>
  </br>
  </br>
  <%= link_to "Ajouter un membre", '/signup', method: :get, class: "btn btn-xs btn-primary" %>
  <% @users.each do |user| %>
    <ul class="listing">
     <div class="well col-md-4 col-md-offset-4 login-marges-2">
       <% if user.profile_picture.attached? %>
       <li class="article-title"><%= image_tag user.profile_picture, class: "profile-picture" %></li>
       <% end %>
        <li class="article-title"><strong><%= user.first_name %> <%= user.last_name %></strong></li>
        <li class="article-title"><em>Email</em> : <%= user.email %></li>
        <li class="article-title"><em>Fonction</em> : <%= user.title %></li>
        <li class="article-title"><em>Description</em> : <%= user.description %></li>
        <li class="article-title"><em>Adresse du bureau</em> : <%= user.address %></li>
        <% if logged_in? %>
        <div class="article-actions">
         <%= link_to "Modifier", edit_user_path(user), class: "btn btn-xs btn-primary" %>
        <% if @current_user == user %>
        <% else %>
          <%= link_to "Supprimer ce membre", delete_user_path(user), method: :get, data: { confirm: "Voulez-vous vraiment supprimer ce membre ?"}, class: "btn btn-xs btn-danger" %>
        <% end %>
        </div>
        <% end %>
        </div>
      </ul>




  <% end %>
  </div>
</div>
