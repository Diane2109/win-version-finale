

<div class="row form-center">
 <div class="col">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Prénom</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :first_name, class: "form-control", placeholder: "Prénom", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Nom</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :last_name, class: "form-control", placeholder: "Nom de famille", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Email</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :email, class: "form-control", placeholder: "Adresse email" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Mot de passe</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :password, class: "form-control", placeholder: "Mot de passe" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Titre</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :title, class: "form-control", placeholder: "Fonction au sein de Winnovation" %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Description</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :description, class: "form-control", placeholder: "Ecrire quelques lignes sur soi, présentes sur le site." %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Adresse de Winnovation</p>
   </div>
   <div class="col-sm-6">
    <%= f.text_field :address, class: "form-control", placeholder: "Ecrire l'adresse de Winnovation." %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-6">
    <p>Photo de profil</p>
   </div>
   <div class="col-sm-6">
    <%= f.file_field :profile_picture, class: "form-control" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <%= f.submit "Sauvegarder le membre", class: 'btn btn-primary btn-lg' %>
   </div>
  </div>
<% end %>
<%= link_to 'Back', users_path, class:"btn btn-xs btn-danger" %>
 </div>
</div>
